<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_f7f7"
    android:layout_height="match_parent">
    <include layout="@layout/layout_public_head"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="288px"
        android:background="@drawable/book_class_bg"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800px"
            android:layout_marginTop="200px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="@drawable/bg_white"
            >
            <GridView
                android:id="@+id/book_class_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:verticalSpacing="58px"
                android:layout_marginTop="66px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:horizontalSpacing="60px"
                android:scrollbars="none"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>