<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_bottom"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <SeekBar
        android:id="@+id/book_position_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_weight="7"
        android:max="100"
        android:maxHeight="5dp"
        android:minHeight="5dp"
        android:progressDrawable="@drawable/seekbar_img_progress"
        android:thumb="@drawable/slider_thumb"
        android:thumbOffset="0dp" />

    <TextView
        android:id="@+id/book_position_text"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="0/0"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/go_page_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/page_forward" />

</LinearLayout>