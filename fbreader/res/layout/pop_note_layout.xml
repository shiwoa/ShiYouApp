<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/pop_top_bg"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <ImageView
            android:id="@+id/btn_yellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_select_yellow" />

        <ImageView
            android:id="@+id/btn_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_select_green" />

        <ImageView
            android:id="@+id/btn_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_select_blue" />

        <ImageView
            android:id="@+id/btn_purple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_select_purple" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_select_clear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@+id/top_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@drawable/pop_bottom_bg">

        <Button
            android:id="@+id/btn_select_copy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="复制"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_select_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="shareBook"
            android:scaleType="centerInside"
            android:text="笔记"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_select_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:scaleType="centerInside"
            android:text="查询"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_select_baike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:scaleType="centerInside"
            android:text="词典"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
